\mode<presentation>

\definecolor{darkblue}{rgb}{0,0,0.8}
% UCLA colors, by http://www.identity.ucla.edu/graphicstandards/colors.shtml for WEB
\definecolor{UCLAblue}{RGB}{83,104,149}     % 0x536895
\definecolor{UCLAgold}{RGB}{255,179,00}   % 0xFFB300


\setbeamercolor*{normal text}{fg=UCLAgold,bg=UCLAblue}
\setbeamercolor{structure}{fg=UCLAblue!50!black}
\setbeamercolor{alerted text}{fg=white}


\setbeamercolor*{palette primary}{fg=UCLAgold,bg=UCLAblue}
\setbeamercolor*{palette secondary}{fg=UCLAgold,bg=UCLAblue}
\setbeamercolor*{palette tertiary}{fg=yellow!60!orange,bg=UCLAblue!80!black,}
\setbeamercolor*{palette quaternary}{bg=UCLAblue!50!black,fg=UCLAgold!80!yellow}


\setbeamercolor*{sidebar}{bg=UCLAblue!70!black}


\setbeamercolor*{palette sidebar primary}{fg=white}
\setbeamercolor*{palette sidebar secondary}{fg=UCLAblue!50!black}   
\setbeamercolor*{palette sidebar tertiary}{fg=white}
\setbeamercolor*{palette sidebar quaternary}{fg=black}

\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{frametitle}{bg=UCLAblue!40!black}
\setbeamercolor{frametitle right}{bg=UCLAblue!60!black}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
